{
    "name": "kpacha/component-benchmark",
    "description": "PHP Components Benchmark",
    "license": "MIT",
    "authors": [
        {
            "name": "Kpacha",
            "email": "kpacha666@gmail.com"
        }
    ],
    "require": {
	"symfony/class-loader": "*",
        "zendframework/zend-loader": "*",
        "fuel/validation":  "dev-master",
        "hybridlogic/validation": "*",
	"respect/validation": "*",
	"symfony/validator": "*",
        "zendframework/zend-validator": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7.24",
        "satooshi/php-coveralls": "dev-master",
        "squizlabs/php_codesniffer": "~1.5.0",
        "kpacha/php-benchmark-tool": "dev-master"
    },
    "repositories": [
        {"type": "vcs", "url": "https://github.com/kpacha/php-benchmark-tool"}
    ],
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": ["mkdir -p build/ab", "mkdir -p public/reports"]
    },
    "autoload": {
        "psr-0": {
            "Kpacha\\ComponentBenchmark": "src",
            "Kpacha\\Tests\\ComponentBenchmark\\": "tests"
        }
    }
}
